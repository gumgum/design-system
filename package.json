  "dependencies": {
    "@fontsource/public-sans": "^4.2.0",
    "@fortawesome/fontawesome-free": "^5.15.1",
    "cssnano": "^4.1.10",
    "gulp": "^4.0.2",
    "gulp-postcss": "^9.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-terser": "^2.0.1"
  },
  "devDependencies": {
    "browser-sync": "^2.26.14",
    "file-loader": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.1.2",
    "sass": "^1.29.0"
  },
  "scripts": {
    "start": "npm-run-all --parallel styles:watch browsersync:config",
    "test": "echo \"Error: no test specified\" && exit 1",
    "styles:build": "node-sass --include-path scss styles/scss/index.scss  styles/css/index.css --output-style compressed",
    "styles:watch": "node-sass -w styles/scss -o temp/",
    "browsersync": "browser-sync start --server --files temp/",
    "browsersync:config": "browser-sync start --config bs-config.js",
    "sass-test": "sass styles/scss/index.scss build/stylesheets/index.css"
  }
}
